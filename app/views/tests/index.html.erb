<p id="notice"><%= notice %></p>

  <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
    <table>
      <thead>
        <tr>
          <th>Picture or Screenshots</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @tests.each do |test| %>

          <tr>
            <td><img src="<%= test.image %>" class="rounded float-left img-thumbnail"></td>
            <td><%= test.name %>
          </tr>
          <tr>
            <td><%= link_to 'Show', test %></td>
            <td><%= link_to 'Edit', edit_test_path(test) %></td>
            <td><%= link_to 'Delete', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <tr>
            <td><hr></td>
            <td><hr></td>
            <td><hr></td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
